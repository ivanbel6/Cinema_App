<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="6dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="8dp"
    android:backgroundTint="@color/transparent"
    cardview:cardCornerRadius="8dp"
    cardview:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/MainIMG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"

            />


    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="120dp"
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            cardview:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="8dp"
                android:text="2021"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/silver"
                cardview:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/genres"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="8dp"
                android:text="Drama , adventure"
                android:textAppearance="?android:textAppearanceMedium"

                tools:ignore="MissingConstraints" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="150dp"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            cardview:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imdbImage"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:contentDescription="imageIMDB"
                app:srcCompat="@drawable/imdbicon"

                />
            <TextView
                android:id="@+id/imdbRating"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="8dp"
                android:text="Title"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/silver" />

            <ImageView
                android:id="@+id/tomatoesImage"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:contentDescription="imageIMDB"
                app:srcCompat="@drawable/tomatoes"

                />

            <TextView
                android:id="@+id/tomatoesRating"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="8dp"
                android:text="Description"
                android:textAppearance="?android:textAppearanceMedium"
                tools:ignore="MissingConstraints" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>