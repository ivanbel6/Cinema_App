<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Onboarding_main_bg_color"
    tools:context=".presentation.StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="432dp"
            android:src="@drawable/main_image_first_fragment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:textColor="@color/silver"
            android:fontFamily="@font/m_plus_rounded_1c_bold"
            android:text="Welcome to MELLUM"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:textColor="@color/silver_transparent"
            android:textAlignment="center"
            android:text="@string/Discover"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="55dp"

            android:src="@drawable/first_indicator"
            android:text="@string/Welcome"/>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>